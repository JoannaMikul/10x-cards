---
import "../styles/global.css";
import { AuthStatus } from "../components/AuthStatus.tsx";

interface Props {
  title?: string;
}

const { title = "10x-cards" } = Astro.props;

// Get current user from middleware
const currentUser = Astro.locals.user || null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-12">
          <div class="flex items-center">
            <a href="/" class="flex items-center">
              <img src="/10xcards_logo.svg" alt="10x-cards" class="h-8 w-auto" />
            </a>
          </div>

          {
            currentUser && (
              <nav class="hidden md:flex space-x-8">
                <a
                  href="/generator"
                  class="text-gray-700 hover:text-primary px-3 py-2 rounded-md text-sm font-medium transition-colors"
                >
                  Generator
                </a>
                <a
                  href="/candidates"
                  class="text-gray-700 hover:text-primary px-3 py-2 rounded-md text-sm font-medium transition-colors"
                >
                  Candidates
                </a>
              </nav>
            )
          }

          <div class="flex items-center">
            <AuthStatus currentUser={currentUser} client:load />
          </div>
        </div>
      </div>
    </header>

    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
