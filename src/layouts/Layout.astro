---
import "../styles/global.css";
import { AppSidebar } from "../components/layout/AppSidebar.tsx";

interface Props {
  title?: string;
}

const { title = "10x-cards" } = Astro.props;

const currentUser = Astro.locals.user || null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {
      currentUser ? (
        <AppSidebar currentUser={currentUser} client:load>
          <slot />
        </AppSidebar>
      ) : (
        <div>
          <header class="bg-white shadow-sm border-b">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
              <div class="flex justify-between items-center h-12">
                <div class="flex items-center">
                  <a href="/" class="flex items-center">
                    <img src="/10xcards_logo.svg" alt="10x-cards" class="h-8 w-auto" />
                  </a>
                </div>

                <div class="flex items-center space-x-2">
                  <a
                    href="/auth/register"
                    class="text-gray-700 hover:text-primary px-3 py-2 rounded-md text-sm font-medium transition-colors"
                  >
                    Sign up
                  </a>
                  <a
                    href="/auth/login"
                    class="bg-primary text-primary-foreground px-3 py-2 rounded-md text-sm font-medium hover:bg-primary/90 transition-colors"
                  >
                    Sign in
                  </a>
                </div>
              </div>
            </div>
          </header>

          <main>
            <slot />
          </main>
        </div>
      )
    }
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
