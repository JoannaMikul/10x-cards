---
import Layout from "../../layouts/Layout.astro";
import { RegisterForm } from "../../components/auth/RegisterForm.tsx";
import { Toaster } from "../../components/ui/sonner";

const title = "Sign up - 10x-cards";
---

<Layout title={title}>
  <main class="min-h-[calc(100vh-3rem)] flex items-center justify-center bg-gray-50 p-6">
    <div class="max-w-md w-full space-y-4 bg-primary/5 rounded-lg p-4 border border-primary/10">
      <div class="text-center">
        <img src="/10xcards_logo.svg" alt="10x-cards" class="mx-auto h-16 w-auto" />
        <h2 class="mt-4 text-3xl font-extrabold text-gray-900">Join 10x-cards</h2>
        <p class="mt-2 text-sm text-gray-600">Create an account and start generating smart flashcards</p>
      </div>

      <RegisterForm client:load />
    </div>
  </main>

  <Toaster client:load />
</Layout>
