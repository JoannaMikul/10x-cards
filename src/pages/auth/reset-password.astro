---
import Layout from "../../layouts/Layout.astro";
import { ResetPasswordForm } from "../../components/auth/ResetPasswordForm";

const title = "Reset password - 10x-cards";
---

<Layout title={title}>
  <main class="min-h-[calc(100vh-3rem)] flex items-center justify-center bg-gray-50 p-6">
    <div class="max-w-md w-full space-y-4 bg-primary/5 rounded-lg p-4 border border-primary/10">
      <div class="text-center">
        <img src="/10xcards_logo.svg" alt="10x-cards" class="mx-auto h-16 w-auto" />
        <h2 class="mt-4 text-3xl font-extrabold text-gray-900">Reset password</h2>
        <p class="mt-2 text-sm text-gray-600">Enter your email address to receive password reset instructions</p>
      </div>

      <ResetPasswordForm client:load />
    </div>
  </main>
</Layout>
