---
import Layout from "../../layouts/Layout.astro";
import { UpdatePasswordForm } from "../../components/auth/UpdatePasswordForm";

const title = "Update password - 10x-cards";

const url = new URL(Astro.request.url);
const hasRecoveryParams =
  url.searchParams.has("token_hash") || url.searchParams.has("token") || url.searchParams.get("type") === "recovery";

if (!hasRecoveryParams) {
  return Astro.redirect("/auth/reset-password");
}
---

<Layout title={title}>
  <main class="min-h-[calc(100vh-3rem)] flex items-center justify-center bg-gray-50 p-6">
    <div class="max-w-md w-full space-y-4 bg-primary/5 rounded-lg p-4 border border-primary/10">
      <div class="text-center">
        <img src="/10xcards_logo.svg" alt="10x-cards" class="mx-auto h-16 w-auto" />
        <h2 class="mt-4 text-3xl font-extrabold text-gray-900">Update your password</h2>
        <p class="mt-2 text-sm text-gray-600">Enter your new password below</p>
      </div>

      <UpdatePasswordForm client:load />
    </div>
  </main>
</Layout>
