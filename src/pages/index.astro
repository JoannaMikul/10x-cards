---
import Layout from "../layouts/Layout.astro";

const title = "Dashboard - 10x-cards";
---

<Layout title={title}>
  <main class="min-h-[calc(100vh-3rem)] bg-background p-6">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-8">
        <img src="/10xcards_logo.svg" alt="10x-cards" class="mx-auto h-16 w-auto mb-4" />
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Welcome to 10x-cards</h1>
        <p class="text-lg text-gray-600">Accelerate your learning with AI-powered flashcards</p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <a
          href="/generator"
          class="block p-6 bg-white rounded-lg border border-gray-200 hover:border-primary/50 hover:shadow-lg transition-all duration-200"
        >
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">AI Generator</h3>
          </div>
          <p class="text-gray-600 mb-4">Generate smart flashcards from your text content using advanced AI</p>
          <span class="text-primary font-medium">Start generating →</span>
        </a>

        <a
          href="/candidates"
          class="block p-6 bg-white rounded-lg border border-gray-200 hover:border-primary/50 hover:shadow-lg transition-all duration-200"
        >
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">Review Candidates</h3>
          </div>
          <p class="text-gray-600 mb-4">Review and refine AI-generated flashcard candidates before saving</p>
          <span class="text-primary font-medium">Review cards →</span>
        </a>
      </div>
    </div>
  </main>
</Layout>
